
@inherits LayoutComponentBase

@inject NavigationManager navigation
<div class="page">
    <!-- <div class="sidebar">
    <NavMenu />
    </div>-->

    <main>

        @if (HideHeader)
        {
            <Header />
        }

        <article class="content px-4 ">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
@code{
 
    public bool HideHeader => !string.IsNullOrEmpty(navigation.ToBaseRelativePath(navigation.Uri));

}